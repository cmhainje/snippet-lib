---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts

eleventyExcludeFromCollections: true

eleventyComputed:
  title: "tagged '{{ tag }}'"
  permalink: /tags/{{ tag | slugify }}/
layout: base.njk
---

<main>
<h1>tag: {{ tag }}</h1>

<ul class="postlist">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a> <time>({{ post.data.date | readableDate }})</time></li>
{% endfor %}
</ul>

</main>
